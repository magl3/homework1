@model SBCHomework.Models.OptionsViewModel

@{ ViewData["Title"] = "Settings"; }

<div>
    <h2>Settings</h2>
    <h4>Identifier : @Html.DisplayFor(x => Model.UniqKey)</h4>


    <form asp-action="Index" asp-controller="Options">
        <div class="form-group">
            <label asp-for="UserName">User Name</label>
            <input type="text" asp-for="UserName" />
            <span asp-validation-for="UserName"></span>
        </div>

        <div class="form-group">
            <label class="email-style" asp-for="Email">Email</label>
            <input type="email" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label class="password-style" asp-for="Password">Password</label>
            <input type="password" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <div class="form-group">
                <input type="checkbox" asp-for="ShowAcc">
                <label>Visible</label>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-outline-dark" />
        </div>
    </form>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
